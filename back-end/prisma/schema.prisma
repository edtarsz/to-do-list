generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  priority    Priority @default(MEDIUM)
  dueDate     DateTime?
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@map("tasks")
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}