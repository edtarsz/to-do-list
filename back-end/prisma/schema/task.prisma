model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  priority    Priority @default(MEDIUM)

  startDate String?
  dueDate String?

  startTime String?
  dueTime String?

  completed Boolean @default(false)

  // Relacion de muchos a uno con User
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tasks")
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}
