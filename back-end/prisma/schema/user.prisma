model User {
    id       Int    @id @default(autoincrement())
    name     String
    lastName String
    username String @unique
    password String
    role     Role   @default(USER)

    // Relacion de uno a muchos con Task y List
    tasks   Task[]
    lists   List[]
    
    @@map("users")
}

enum Role {
    ADMIN
    USER
}